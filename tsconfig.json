{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./bin",
    "rootDir": "./src",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
  },
  "include": ["src/**/*.ts"]
}